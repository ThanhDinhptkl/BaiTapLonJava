	private void createFormLogin() {
		setTitle("Login Form");
		setSize(400, 300);
		setLocationRelativeTo(null);
		setDefaultCloseOperation(EXIT_ON_CLOSE);

		// Tạo panel để chứa các thành phần của form login
		JPanel panel = new JPanel(new GridLayout(3, 2));

		// Tạo các thành phần của form login
		JLabel usernameLabel = new JLabel("Username:");
		JTextField usernameField = new JTextField();
		JLabel passwordLabel = new JLabel("Password:");
		JPasswordField passwordField = new JPasswordField();
		JButton loginButton = new JButton("Login");
		JButton cancelButton = new JButton("Cancel");

		// Thêm các thành phần vào panel
		panel.add(usernameLabel);
		panel.add(usernameField);
		panel.add(passwordLabel);
		panel.add(passwordField);
		panel.add(loginButton);
		panel.add(cancelButton);

		// Tạo label để chứa hình ảnh nền
		JLabel background = new JLabel(new ImageIcon("img/bg_lg.webp"));

		// Đặt kích thước và vị trí cho label
		background.setBounds(0, 0, 400, 300);

		// Thêm label vào panel
		panel.add(background);

		// Đặt panel làm nội dung cho form login
		setContentPane(panel);

